<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeAmoledDark" parent="@style/BaseThemeDark">
        <item name="android:textColorSecondary">#ff7f7f7f</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@color/kiss_text_on_dark</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="dividerDrawable">@android:color/transparent</item>
        <item name="listBackgroundColor">@android:color/black</item>
        <item name="resultColor">@android:color/white</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@android:color/black</item>
        <item name="searchBackgroundOutline">@android:color/white</item>
        <item name="searchColor">@android:color/white</item>
        <item name="textShadowRadius">0.0</item>
    </style>
    <style name="AppThemeDark" parent="@style/BaseThemeDark">
        <item name="android:textColorSecondary">#ff7f7f7f</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/kiss_text_on_dark</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="dividerDrawable">@drawable/list_separator_dark</item>
        <item name="listBackgroundColor">@color/kiss_list_background_inverse</item>
        <item name="resultColor">@color/kiss_text_on_dark</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="searchBackgroundColor">@color/kiss_list_background_inverse</item>
        <item name="searchBackgroundOutline">@android:color/transparent</item>
        <item name="searchColor">@color/kiss_text_on_dark</item>
        <item name="textShadowRadius">0.0</item>
    </style>
    <style name="AppThemeLight" parent="@style/BaseThemeLight">
        <item name="android:textColorSecondary">#ffd3d3d3</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorTertiary">#ffd3d3d3</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="dividerDrawable">@drawable/list_separator_light</item>
        <item name="listBackgroundColor">@android:color/white</item>
        <item name="resultColor">@android:color/black</item>
        <item name="resultShadowColor">#3f000000</item>
        <item name="searchBackgroundColor">@android:color/white</item>
        <item name="searchBackgroundOutline">@android:color/transparent</item>
        <item name="searchColor">@android:color/black</item>
        <item name="textShadowRadius">0.0</item>
    </style>
    <style name="AppThemeSemiTransparent" parent="@style/AppThemeLight">
        <item name="android:textColorSecondary">@color/kiss_text_on_semi_light</item>
        <item name="dividerDrawable">@null</item>
        <item name="listBackgroundColor">@color/kiss_background_light_transparent</item>
        <item name="resultShadowColor">@color/kiss_background_light_transparent</item>
        <item name="textShadowRadius">3.0</item>
    </style>
    <style name="AppThemeSemiTransparentDark" parent="@style/AppThemeDark">
        <item name="android:textColorSecondary">@color/kiss_text_on_dark</item>
        <item name="dividerDrawable">@null</item>
        <item name="listBackgroundColor">@color/kiss_background_dark_transparent</item>
        <item name="resultColor">@color/kiss_text_on_semi_dark</item>
        <item name="textShadowRadius">3.0</item>
    </style>
    <style name="AppThemeTransparent" parent="@style/AppThemeLight">
        <item name="dividerDrawable">@null</item>
        <item name="listBackgroundColor">@android:color/transparent</item>
        <item name="resultColor">@color/kiss_text_on_light</item>
        <item name="resultShadowColor">@android:color/black</item>
        <item name="textShadowRadius">3.0</item>
    </style>
    <style name="AppThemeTransparentDark" parent="@style/AppThemeDark">
        <item name="dividerDrawable">@null</item>
        <item name="listBackgroundColor">@android:color/transparent</item>
        <item name="textShadowRadius">3.0</item>
    </style>
    <style name="BaseThemeDark" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="appSelectableItemBackground">?android:selectableItemBackground</item>
    </style>
    <style name="BaseThemeLight" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="appSelectableItemBackground">?android:selectableItemBackground</item>
    </style>
    <style name="PopupAnimationBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>
    <style name="PopupAnimationTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_top</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>
    <style name="SettingTheme" parent="@style/AppThemeLight">
        <item name="android:textColorSecondary">#ff7f7f7f</item>
        <item name="android:windowBackground">@color/kiss_background</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>
    <style name="SettingThemeDark" parent="@style/AppThemeDark">
        <item name="android:windowBackground">@color/kiss_list_background_inverse</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
    </style>
    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
