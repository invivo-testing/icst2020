<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BackActionBar" parent="@style/VanillaBase">
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
    </style>
    <style name="Library" parent="@style/VanillaBase">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Playback" parent="@style/VanillaBase">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/Universal.PlaybackActionBar</item>
    </style>
    <style name="PopupDialog" parent="@android:style/Theme.Holo.Dialog.MinWidth">
        <item name="background_circle_color">#ff4a4a4a</item>
        <item name="controls_active">@android:color/holo_blue_dark</item>
        <item name="controls_normal">#fff5f5f5</item>
        <item name="overlay_background_color">#aa000000</item>
    </style>
    <style name="TextAppearance.Compat.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.Compat.Notification.Info" parent="@style/TextAppearance.Compat.Notification">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.Compat.Notification.Line2" parent="@style/TextAppearance.Compat.Notification.Info" />
    <style name="TextAppearance.Compat.Notification.Time" parent="@style/TextAppearance.Compat.Notification">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.Compat.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="Universal.PlaybackActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
    <style name="VanillaBase" parent="@android:style/Theme.Holo">
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="background_circle_color">#ff4a4a4a</item>
        <item name="controls_active">@android:color/holo_blue_dark</item>
        <item name="controls_normal">#fff5f5f5</item>
        <item name="float_color">#ff222222</item>
        <item name="now_playing_marker">@android:color/holo_blue_dark</item>
        <item name="overlay_background_color">#aa000000</item>
        <item name="overlay_foreground_color">#ffb2b2b2</item>
        <item name="tabs_background">#ff1e1e1e</item>
    </style>
    <style name="Widget.Compat.NotificationActionContainer" parent="" />
    <style name="Widget.Compat.NotificationActionText" parent="" />
    <style name="Widget.Support.CoordinatorLayout" parent="@android:style/Widget">
        <item name="statusBarBackground">#ff000000</item>
    </style>
</resources>
