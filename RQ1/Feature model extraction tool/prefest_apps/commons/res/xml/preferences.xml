<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preference_category_appearance">
        <SwitchPreference android:title="@string/preference_theme" android:key="theme" android:summary="@string/preference_theme_summary" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_general">
        <ListPreference android:entries="@array/pref_defaultLicense_entries" android:title="@string/preference_license" android:key="defaultLicense" android:defaultValue="@string/license_pref_cc_by_sa_4_0" android:entryValues="@array/pref_defaultLicense_values" />
        <SwitchPreference android:title="@string/use_external_storage" android:key="useExternalStorage" android:summary="@string/use_external_storage_summary" android:defaultValue="true" />
        <EditTextPreference android:maxLength="3" android:title="@string/set_limit" android:key="uploads" android:defaultValue="100" android:inputType="numberDecimal" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_location">
        <SwitchPreference android:title="@string/allow_gps" android:key="allowGps" android:summary="@string/allow_gps_summary" android:defaultValue="false" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_feedback">
        <Preference android:title="@string/become_a_tester_title" android:key="becomeBetaTester" android:summary="@string/become_a_tester_description" />
        <Preference android:title="@string/send_log_file" android:key="sendLogFile" android:summary="@string/send_log_file_description" />
    </PreferenceCategory>
</PreferenceScreen>