<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:fitsSystemWindows="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference android:entries="@array/languages" android:title="@string/settings_choose_language" android:key="settings_language" android:entryValues="@array/languages_codes" />
    <it.feio.android.omninotes.FontSizeListPreference android:entries="@array/text_size" android:layout="@layout/settings_font_size_item" android:title="@string/settings_text_size" android:key="settings_text_size" android:defaultValue="default" android:entryValues="@array/text_size_values" />
    <ListPreference android:entries="@array/colors_app" android:title="@string/colors_app" android:key="settings_colors_app" android:defaultValue="strip" android:entryValues="@array/colors_app_values" />
    <SwitchPreference android:title="@string/settings_fab_expansion_behavior" android:key="settings_fab_expansion_behavior" android:defaultValue="false" android:summaryOn="@string/settings_fab_expansion_behavior_summary_on" android:summaryOff="@string/settings_fab_expansion_behavior_summary_off" />
    <SwitchPreference android:title="@string/settings_simple_calendar" android:key="settings_simple_calendar" android:summary="@string/settings_simple_calendar_summary" android:defaultValue="false" />
    <SwitchPreference android:title="@string/settings_attachments_on_bottom" android:key="settings_attachments_on_bottom" android:defaultValue="false" android:summaryOn="@string/settings_attachments_on_bottom_summary_on" android:summaryOff="@string/settings_attachments_on_bottom_summary_off" />
    <SwitchPreference android:title="@string/settings_prettified_dates" android:key="settings_prettified_dates" android:defaultValue="true" android:summaryOn="@string/settings_prettified_dates_summary_on" android:summaryOff="@string/settings_prettified_dates_summary_off" />
</PreferenceScreen>