<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:fitsSystemWindows="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:title="@string/settings_enable_vibration" android:key="settings_notification_vibration" android:defaultValue="true" />
    <RingtonePreference android:title="@string/settings_notification_ringtone" android:key="settings_notification_ringtone" android:ringtoneType="all" />
    <EditTextPreference android:title="@string/settings_notification_snooze_delay" android:key="settings_notification_snooze_delay" android:defaultValue="10" android:inputType="number" />
    <Preference android:title="@string/settings_notification_enable_boot_persistence" android:key="settings_notification_service_listener" android:summary="@string/settings_notification_enable_boot_persistence_summary">
        <intent android:action="android.settings.ACTION_NOTIFICATION_LISTENER_SETTINGS" />
    </Preference>
</PreferenceScreen>